@using BlogBlazorUI.Models;
@layout MainLayout


<RadzenCard class="mb-3">
    <div class="row mt-2">
        <div class="col-md-4">
            @if(ArticleVM.Picture != null)
            {
                <RadzenImage Path="@ArticleVM.Picture" Class="rounded-circle float-start me-3" Style="width: 100px; height: 100px;" />
            }
            else
            {
                <RadzenImage Path="./assets/placeholder-image.jpg" Class="rounded-circle float-start me-3" Style="width: 100px; height: 100px;" />
            }
        </div>
        <div class="col-md-8">
            <div class="row">
                <RadzenText TextStyle="TextStyle.H6" Class="d-flex mt-1 mb-0">@ArticleVM.Name</RadzenText>
            </div>
            <div class="row">
                <RadzenText TagName="TagName.P" Class="d-flex mt-1 mb-0">@((MarkupString)ArticleVM.ContentSummary)</RadzenText>
            </div>
        </div>
      
    </div>
    <div class="row mt-2">
        <div class="col-md-5 d-flex justify-content-between align-items-center">
            <RadzenBadge class="rz-background-color-primary-light">
                <div style=" display: flex; align-items: center; padding: 0 0.25rem 0 0; gap: 0.25rem; text-transform: none;">
                    <i class="fas fa-calendar-week"></i> @ArticleVM.PublishDate.ToString("d")
                </div>
            </RadzenBadge>
            <RadzenBadge class="rz-background-color-primary-light">
                <div style=" display: flex; align-items: center; padding: 0 0.25rem 0 0; gap: 0.25rem; text-transform: none;">
                    <i class="fas fa-folders"></i>  @ArticleVM.Category.Name
                </div>
            </RadzenBadge>
            <RadzenBadge class="rz-background-color-primary-light">
                <div style=" display: flex; align-items: center; padding: 0 0.25rem 0 0; gap: 0.25rem; text-transform: none;">
                    <i class="fas fa-eye"></i>  @ArticleVM.ViewCount
                </div>
            </RadzenBadge>
            <RadzenBadge class="rz-background-color-primary-light">
                <div style=" display: flex; align-items: center; padding: 0 0.25rem 0 0; gap: 0.25rem; text-transform: none;">
                    <i class="fas fa-comments"></i> @ArticleVM.Comments.Count
                </div>
            </RadzenBadge>
       </div>
        <div class="col-md-7 d-flex justify-content-end">

            <a style="color:white;" class="rz-background-color-primary-light" href="/article/@ArticleVM.Id">
                       <RadzenButton Text="Read More">
                        </RadzenButton>
                    </a>
           
          
        </div>
    </div>
</RadzenCard>






@code {
    [Parameter]
    public ArticleVM ArticleVM { get; set; }
}
