@inherits LayoutComponentBase
@using BlogBlazorUI.components
@using BlogBlazorUI.components.Client
<Navbar></Navbar>

<div class="container mt-2">
    <div class="row">
        <BlogBlazorUI.Utils.CustomErrorBoundary @ref="ErrorBoundary" Context="Exception">
            <ChildContent>
                @Body
                <div class="col-md-4">
                    <MenuCategory></MenuCategory>
                    <MostViewedArticles></MostViewedArticles>
                    <ArchivedArticles></ArchivedArticles>
                </div>
            </ChildContent>
            <ErrorContent>

                <div class="alert alert-primary">
                    <h3>@Exception.GetType()</h3>
                    <h3>@Exception.Message</h3>
                </div>
               
            </ErrorContent>
        </BlogBlazorUI.Utils.CustomErrorBoundary>
       

    </div>
</div>

@code {
    private ErrorBoundary ErrorBoundary { get; set; }
}

